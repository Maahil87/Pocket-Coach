<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Coach.BaseYourAccounts"
             Title="BaseYourAccounts">
    <VerticalStackLayout Spacing="20" Padding="20">
        <!-- Header Section -->
        <Label Text="Your Accounts" FontSize="32" TextColor="White" HorizontalOptions="Center"/>
        <BoxView HeightRequest="2" BackgroundColor="White"/>

        <!-- Personal Accounts Section -->
        <Label Text="Personal Accounts" FontSize="18" TextColor="White" FontAttributes="Bold"/>

        <Frame BackgroundColor="#264E46" CornerRadius="15" Padding="15">
            <HorizontalStackLayout Spacing="15">
                <Image Source="credit_card_icon.png" WidthRequest="50" HeightRequest="50"/>
                <VerticalStackLayout>
                    <Label Text="Credit Card" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="4213 6300 XXXX XXXX" TextColor="White" FontSize="14"/>
                    <Label Text="$5,000" TextColor="White" FontSize="20" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <!-- Page Control Indicator -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
            <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="Gray"/>
            <BoxView WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
        </HorizontalStackLayout>

        <!-- Options Section -->
        <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">
            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="family_accounts_icon.png" WidthRequest="50" HeightRequest="50"/>
                <Label Text="Family Accounts" TextColor="White" FontSize="14" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="borrowings_icon.png" WidthRequest="50" HeightRequest="50"/>
                <Label Text="Borrowings" TextColor="White" FontSize="14" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="insurance_icon.png" WidthRequest="50" HeightRequest="50"/>
                <Label Text="Insurance" TextColor="White" FontSize="14" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <!-- Additional Options Section -->
        <HorizontalStackLayout Spacing="20">
            <Frame BackgroundColor="#264E46" CornerRadius="15" Padding="20" WidthRequest="160" HeightRequest="120">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="subscriptions_icon.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Subscriptions" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#264E46" CornerRadius="15" Padding="20" WidthRequest="160" HeightRequest="120">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="rewards_icon.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Rewards and Programs" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>