                            <ProgressBar Progress="0.67"
                                         HeightRequest="15"
                                         BackgroundColor="White"
                                         ProgressColor="Black"/>
                            <Label Text="67%"
                                   FontSize="14"
                                   TextColor="White"
                                   FontAttributes="Bold"
