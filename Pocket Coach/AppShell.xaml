<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pocket_Coach.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pocket_Coach"
    Shell.FlyoutBehavior="Disabled"
    Title="Pocket_Coach"
    Shell.TabBarBackgroundColor="#216543"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#B0C4B1" BackgroundColor="#216543">
    <TabBar>
        <ShellContent Title="Home" Icon="home.png" ContentTemplate="{DataTemplate local:Home}" />
        <ShellContent Title="Spending" Icon="spending.png" ContentTemplate="{DataTemplate local:BaseSpendingPage}" />
        <ShellContent Title="Savings" Icon="save.png" ContentTemplate="{DataTemplate local:BaseSavings}" />
        <ShellContent Title="Accounts" Icon="account.png" ContentTemplate="{DataTemplate local:BaseYourAccounts}" />
        <ShellContent Title="Pocket Coach" Icon="book.png" ContentTemplate="{DataTemplate local:BaseMicroLearning}" />

    </TabBar>
</Shell>
